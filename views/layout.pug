doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  title WebApp &middot; Luchina

  script(src="/js/myscript.js")

  link(href='/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
  link(rel='icon' href='/images/coala.png' sizes='32x32' type='image/png')
  meta(name='theme-color' content='#563d7c')
  link(href='/css/cover.css' rel='stylesheet')
  link(href='/css/mystuff.css' rel='stylesheet')
body
  div.cover-container.d-flex.w-100.h-100.p-3.mx-auto.flex-column
    header.masthead.mb-auto
      .inner
        h3.masthead-brand Cover
        nav.nav.nav-masthead.justify-content-center
          a.nav-link.active(href='/') Home
          a.nav-link(href='#') Features
          if (`${type}` == 1)
            div.nav-item.dropdown.ml-3
              a.nav-link.dropdown-toggle(id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                | Action
              div.dropdown-menu(aria-labelledby="navbarDropdown")
                a.dropdown-item(href='/designer/create') create psd
                a.dropdown-item(href='/designer/localize') localize psd
                a.dropdown-item(href='/designer/modify') modify psd
                div.dropdown-divider
                a.dropdown-item(href='/auth/logout') log out
          else if (`${type}` == 2)
            div.nav-item.dropdown.ml-3
              a.nav-link.dropdown-toggle(id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                | Action
              div.dropdown-menu(aria-labelledby="navbarDropdown")
                a.dropdown-item(href='#') create matrix
                a.dropdown-item(href='#') modify/publish matrix
                div.dropdown-divider
                a.dropdown-item(href='/auth/logout') log out
          else if (`${type}` == 3)
            div.nav-item.dropdown.ml-3
              a.nav-link.dropdown-toggle(id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                | Action
              div.dropdown-menu(aria-labelledby="navbarDropdown")
                a.dropdown-item(href='#') find page
                a.dropdown-item(href='/findscreenshot') find .tif
                div.dropdown-divider
                a.dropdown-item(href='/auth/logout') log out
          else
            a.nav-link(href='#') Contact

    block content
    footer.text-center.mastfoot.mt-auto
      .inner
        p
          | made by
          a(href='https://github.com/IamLena/websqlnodeapp')  Luchina Lena

